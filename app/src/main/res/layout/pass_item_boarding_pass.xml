<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="BoardingPassDataBinding">

        <variable
            name="passViewModel"
            type="com.diyankomitov.digitalpasswallet.viewmodel.PassViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@{passViewModel.backgroundImage}"
            app:cardBackgroundColor="@{passViewModel.backgroundColor}"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="2dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">
                <!--TODO: remove src and replace with real src from java-->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/pass_logo_cd"
                    android:maxHeight="50dp"
                    android:maxWidth="160dp"
                    android:src="@{passViewModel.logo}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/logo_text"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="@{passViewModel.logoText}"
                    android:textColor="@{passViewModel.foregroundColor}"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    app:layout_constraintEnd_toStartOf="@+id/header_label_3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/logo"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintWidth_default="wrap" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerLabel1}"
                    android:textColor="@{passViewModel.labelColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    app:layout_constraintVertical_bias="0.0" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_value_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerValue1}"
                    android:textColor="@{passViewModel.foregroundColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="@+id/header_label_1"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/header_label_1"
                    app:layout_constraintTop_toBottomOf="@+id/header_label_1" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerLabel2}"
                    android:textColor="@{passViewModel.labelColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/header_label_1"
                    app:layout_constraintEnd_toStartOf="@+id/header_label_1"
                    app:layout_constraintTop_toTopOf="@+id/header_label_1" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_value_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerValue2}"
                    android:textColor="@{passViewModel.foregroundColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="@+id/header_label_2"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/header_label_2"
                    app:layout_constraintTop_toBottomOf="@+id/header_label_2" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerLabel3}"
                    android:textColor="@{passViewModel.labelColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/header_label_2"
                    app:layout_constraintEnd_toStartOf="@+id/header_label_2"
                    app:layout_constraintTop_toTopOf="@+id/header_label_2"
                    app:layout_constraintVertical_bias="0.25" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/header_value_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:padding="1dp"
                    android:text="@{passViewModel.headerValue3}"
                    android:textColor="@{passViewModel.foregroundColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="@+id/header_label_3"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/header_label_3"
                    app:layout_constraintTop_toBottomOf="@+id/header_label_3" />

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/pass_thumbnail_cd"
                    android:src="@{passViewModel.thumbnail}"
                    app:layout_constraintBottom_toBottomOf="@+id/primary_value"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/primary_label" />

                <TextView
                    android:id="@+id/primary_label"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:maxLines="1"
                    android:text="@{passViewModel.primaryLabel1}"
                    android:textColor="@{passViewModel.labelColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toStartOf="@+id/thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo_text" />

                <TextView
                    android:id="@+id/primary_value"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:text="@{passViewModel.primaryValue1}"
                    android:textColor="@{passViewModel.foregroundColor}"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toStartOf="@+id/thumbnail"
                    app:layout_constraintStart_toStartOf="@+id/primary_label"
                    app:layout_constraintTop_toBottomOf="@+id/primary_label" />


                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/secondary_fields"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:alignItems="center"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/primary_value">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/secondary_label_1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel1}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/secondary_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue1}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/secondary_label_2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel2}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/secondary_value_2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue2}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/secondary_label_3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel3}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/secondary_value_3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue3}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/secondary_label_4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel4}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/secondary_value_4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue4}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>


                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/auxiliary_fields"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:alignItems="center"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:layout_constraintBottom_toTopOf="@+id/barcode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/secondary_fields">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/auxiliary_label_1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.auxiliaryLabel1}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/auxiliary_value_1"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.auxiliaryValue1}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/auxiliary_label_2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel2}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/auxiliary_value_2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue2}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/auxiliary_label_3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel3}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/auxiliary_value_3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue3}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/auxiliary_label_4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryLabel4}"
                            android:textColor="@{passViewModel.labelColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/auxiliary_value_4"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:maxLines="1"
                            android:text="@{passViewModel.secondaryValue4}"
                            android:textColor="@{passViewModel.foregroundColor}"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                </com.google.android.flexbox.FlexboxLayout>

                <ImageView
                    android:id="@+id/barcode"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/pass_barcode_cd"
                    android:src="@{passViewModel.barcode}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="W,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="parent" />


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>
